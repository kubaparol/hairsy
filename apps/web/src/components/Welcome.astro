---
import { Sparkles } from '@lucide/astro';
---

<div id="container">
	<main>
		<section id="hero">
			<div id="icon-wrapper">
				<div id="sparkles-container">
					<Sparkles id="sparkles-icon" />
					<div class="sparkle-dot sparkle-1"></div>
					<div class="sparkle-dot sparkle-2"></div>
					<div class="sparkle-dot sparkle-3"></div>
					<div class="sparkle-dot sparkle-4"></div>
					<div class="sparkle-dot sparkle-5"></div>
					<div class="sparkle-dot sparkle-6"></div>
				</div>
			</div>
			<h1>Hairsy</h1>
			<p id="subtitle">Coming Soon</p>
		</section>
	</main>
</div>

<style>
	#container {
		font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
		height: 100%;
		background: #0a0a0a;
		color: #e5e5e5;
	}

	main {
		height: 100%;
		display: flex;
		justify-content: center;
		align-items: center;
	}

	#hero {
		display: flex;
		align-items: center;
		flex-direction: column;
		justify-content: center;
		text-align: center;
		padding: 32px;
	}

	#icon-wrapper {
		margin-bottom: 32px;
	}

	#sparkles-container {
		position: relative;
		display: inline-block;
	}

	#sparkles-icon {
		width: 64px;
		height: 64px;
		color: #a78bfa;
		opacity: 0.9;
		animation: pulse 2s ease-in-out infinite;
	}

	@keyframes pulse {
		0%, 100% {
			opacity: 0.9;
			transform: scale(1);
		}
		50% {
			opacity: 0.6;
			transform: scale(1.05);
		}
	}

	.sparkle-dot {
		position: absolute;
		width: 6px;
		height: 6px;
		background: #a78bfa;
		border-radius: 50%;
		opacity: 0;
		animation: sparkle 3s ease-in-out infinite;
	}

	.sparkle-1 {
		top: -10px;
		left: 50%;
		transform: translateX(-50%);
		animation-delay: 0s;
	}

	.sparkle-2 {
		top: 10px;
		right: -10px;
		animation-delay: 0.5s;
	}

	.sparkle-3 {
		bottom: 10px;
		right: 5px;
		animation-delay: 1s;
	}

	.sparkle-4 {
		bottom: -10px;
		left: 50%;
		transform: translateX(-50%);
		animation-delay: 1.5s;
	}

	.sparkle-5 {
		bottom: 10px;
		left: -10px;
		animation-delay: 2s;
	}

	.sparkle-6 {
		top: 10px;
		left: 5px;
		animation-delay: 2.5s;
	}

	.sparkle-2,
	.sparkle-3,
	.sparkle-5,
	.sparkle-6 {
		transform: none;
	}

	.sparkle-1,
	.sparkle-4 {
		transform: translateX(-50%);
	}

	@keyframes sparkle {
		0%, 100% {
			opacity: 0;
			transform: scale(0);
		}
		10%, 90% {
			opacity: 1;
			transform: scale(1);
		}
		50% {
			opacity: 0.8;
			transform: scale(1.2);
		}
	}

	.sparkle-1,
	.sparkle-4 {
		animation-name: sparkle-centered;
	}

	@keyframes sparkle-centered {
		0%, 100% {
			opacity: 0;
			transform: scale(0) translateX(-50%);
		}
		10%, 90% {
			opacity: 1;
			transform: scale(1) translateX(-50%);
		}
		50% {
			opacity: 0.8;
			transform: scale(1.2) translateX(-50%);
		}
	}

	h1 {
		font-size: 48px;
		font-weight: 600;
		margin: 0 0 16px 0;
		color: #f5f5f5;
		letter-spacing: -0.02em;
	}

	#subtitle {
		font-size: 18px;
		color: #a3a3a3;
		margin: 0;
		font-weight: 400;
	}

	@media screen and (max-width: 768px) {
		h1 {
			font-size: 36px;
		}

		#subtitle {
			font-size: 16px;
		}

		#sparkles-icon {
			width: 56px;
			height: 56px;
		}
	}
</style>
